<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-900 text-white py-5 relative pt-12">
        <h1 class="text-center py-3 font-semibold text-lg fixed top-0 left-0 w-full z-10">SavedPosts
            <a href="/profile"><i class="ri-arrow-left-s-line absolute left-6"></i></a>
        </h1>
    <div class="posts w-full flex gap-1 py-1 mt-5 flex-wrap">

        <%if(loggedUser.savedPosts.length>0){%>
            <%loggedUser.savedPosts.reverse().forEach(post=>{%>
                <div class="post w-[32.5%] h-32 bg-sky-100 overflow-hidden shrink-0">
                        <a href="/post/<%=post._id%>">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%=post.media%>" alt="">
                </a>
                </div>
    
              <%})%>
                <%}else{%>
                  <div class="w-full opacity-50 min-h-[30vw] flex justify-center items-center">
                    <small>No saved post yet.</small>
                  </div>
                  <%}%>

            
          
           
            
            
          
        </div>


    </div>
    <% include ./partials/footer.ejs %>