<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-zinc-900 text-white py-5">
    <div class="flex justify-between items-center px-4">
      <a class="text-sm text-blue-500" href="/profile"><i class="ri-arrow-left-s-line"></i> profile</a>
      <h2 class="leading-none text-sm">Upload Post</h2>
      <a class="text-sm" href="/feed"><i class="ri-home-line"></i> home</a>
    </div>
    <div class="flex flex-col items-center gap-2 mt-20">
      <div class="image w-[25vw] h-[25vw] rounded-full border-2 border-zinc-800 flex items-center justify-center">
        <i class="text-5xl font-light ri-image-line"></i>
      </div>
      <button id="selectpic" class="text-blue-500 capitalize">select picture</button>
    </div>
    <div class="flex justify-center items-center mt-10 gap-10 w-full">
      <h4 class="posttext border-b-2 px-2 pb-2">post</h4>
      <h4 class="storytext opacity-20 px-2 pb-2">story</h4>
    </div>
    <form id="uploadform" action="/upload" class="w-full px-6 py-3 mt-10" enctype="multipart/form-data" method="post">
      <input hidden type="file" name="image">
      <input hidden class="postinp" name="category" type="radio" checked value="post">
      <input hidden class="storyinp" name="category"  type="radio" value="story">
        <textarea class="caption px-2 py-1 w-full bg-zinc-900 border-2 h-20 border-zinc-800 resize-none rounded-md outline-none" placeholder="Write a caption..." name="caption"></textarea>
        <input class="w-full px-2 py-2 bg-blue-500 rounded-md" type="submit" value="Post">
    </form>
  </div>

  <script>
    document.querySelector("#selectpic")
    .addEventListener("click", function(){
        document.querySelector("#uploadform input").click();
    });
    document.querySelector(".posttext").addEventListener("click",()=>{

      document.querySelector(".storytext").classList.add("opacity-20")
      document.querySelector(".storytext").classList.remove("border-b-2")

      document.querySelector(".posttext").classList.add("border-b-2")
      document.querySelector(".posttext").classList.remove("opacity-20")

      document.querySelector(".postinp").click()
      document.querySelector(".caption").classList.remove("hidden")

    })
    document.querySelector(".storytext").addEventListener("click",()=>{
      
      document.querySelector(".storytext").classList.add("border-b-2")
      document.querySelector(".storytext").classList.remove("opacity-20")

      document.querySelector(".posttext").classList.add("opacity-20")
      document.querySelector(".posttext").classList.remove("border-b-2")

      document.querySelector(".storyinp").click()
      document.querySelector(".caption").classList.add("hidden")
    })
  </script>
